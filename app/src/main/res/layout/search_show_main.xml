<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ListItemText"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/show_word_shape">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
        <TextView
            android:id="@+id/ph_en_text"
            style="@style/ListItemText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:paddingStart="10dp"
            android:gravity="center_vertical"

            android:text=""
            android:textColor="@color/color_white"/>
            <ImageButton
                android:id="@+id/ph_en_mp3_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ph_en_text"
                android:layout_centerVertical="true"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_voice_32"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/ph_am_text"
                style="@style/ListItemText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@color/colorPrimary"
                android:paddingStart="10dp"
                android:text=""
                android:textColor="@color/color_white"/>
            <ImageButton
                android:id="@+id/ph_am_mp3_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ph_am_text"

                android:background="@color/colorPrimary"
                android:src="@drawable/ic_voice_32"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/parts_text"
            style="@style/ListItemText"
            android:layout_marginBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="显示意思"
            android:gravity="start"
            android:paddingStart="10dp"
            android:textColor="@color/color_white"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_white">

        </View>

        <TextView
            android:id="@+id/exchange_text"
            style="@style/ListItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="变形"
            android:gravity="start"
            android:paddingStart="10dp"
            android:textColor="@color/color_white"/>


        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            >

            <Button
                android:id="@+id/search_faceback"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginRight="1dip"
                android:layout_weight="1"
                android:focusable="false"
                android:background="@color/color_blue"
                android:focusableInTouchMode="false"
                android:text="问题反馈"
                android:textColor="@color/color_white"
                android:textSize="12sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/search_addbook"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="0dip"
                android:layout_weight="1"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="加入生词本"
                android:background="@color/color_blue"
                android:textColor="@color/color_white"
                android:textSize="12sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
